<%= render "partials/navbar" %>

<div class='container text-center'>
  <div class='container text-center'>
    <h3>Use the form below to create a new email and/or password</h3>
    <%= bootstrap_form_for(@student, url: signup_path) do |f| %>
          <%= f.email_field :email %><br>

          <%= f.password_field :password %><br>
          <%= f.primary "Update Profile" %>
    <% end %>
  </div>

  <%= link_to 'Delete my account', @student, :method => :delete, data: { confirm: "Are you sure you want to delete your account?" } %><br>

  <a href="/logout">Logout</a>
</div>
