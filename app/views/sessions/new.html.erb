<div class='container text-center'>
  <h3>Login</h3>

  <%= form_for @student, url: login_path do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %><br>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %><br>

    <%= f.submit "Login"%>
    <% end %>

    <%= link_to "Sign Up/Log In with Google", '/auth/google_oauth2' %>
</div>
