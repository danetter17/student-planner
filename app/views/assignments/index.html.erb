<nav class="navbar navbar-dark bg-primary">
  <a class="navbar-brand" href="<%= student_path(@student) %>">Student Planner</a>
  <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample01" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="navbar-collapse collapse" id="navbarsExample01" style="">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Home',  student_path(@student), :class => "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Courses',  student_courses_path(@student), :class => "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Assignments',  student_assignments_path(@student), :class => "nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<div class='container text-center'>
  <h2>Current Assignments</h2>

  <table class='center'>
    <tr>
      <th>Title</th>
      <th>Course Name</th>
      <th>Due Date</th>
      <th>View</th>
    </tr>
    <% @student.assignments.all.each do |assignment| %>
      <% if assignment.course %>
        <tr>
          <td><%= assignment.title %></td>
          <td><%= assignment.course.course_name %></td>
          <td><%= assignment.due_date %></td>
          <td><%= link_to "View/Edit Assignment", student_assignment_path(@student, assignment) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <%= button_to "Add New Assignment", new_student_assignment_path, :class => "inbox-sf-add-btn tip", :method => :get %>

</div>
