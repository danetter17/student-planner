<%= render "partials/navbar" %>

<div class='container text-center'>
  <h2>Current Assignments</h2><br>

  <table class='table table-bordered table-hover center'>
    <tr>
      <th>Title</th>
      <th>Course Name</th>
      <th>Due Date</th>
      <th>View</th>
    </tr>
    <% @student.assignments.all.each do |assignment| %>
      <% if assignment.course %>
        <tr>
          <td><%= assignment.title %></td>
          <td><%= assignment.course.course_name %></td>
          <td><%= assignment.due_date %></td>
          <td><%= link_to "View/Edit Assignment", student_assignment_path(@student, assignment) %></td>
        </tr>
      <% end %>
    <% end %>
  </table><br><br><br>
</div>

<div class='container text-center'>
  <h3>Due Soon</h3><br>
  <table class='table table-bordered table-hover center'>
    <tr>
      <th>Title</th>
      <th>Due Date</th>
    </tr>
    <% @assignments_due_soon.each do |assignment| %>
      <tr>
        <td><%= assignment.title %></td>
        <td><%= assignment.due_date %></td>
      </tr>
    <% end %>
  </table><br>

  <%= button_to "Add New Assignment", new_student_assignment_path, :class => "inbox-sf-add-btn tip", :method => :get %><br><br>
</div>
