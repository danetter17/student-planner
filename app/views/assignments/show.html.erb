<%= render "partials/navbar" %>

<div class='container text-center'>
  <br><h4><%= @assignment.title %></h4>

  <table class='table table-bordered table-hover center'>
    <tr>
      <th>Course Name</th>
      <th>Due Date</th>
      <th>Details</th>
    </tr>
    <tr>
      <td><%= @assignment.course.course_name %></td>
      <td><%= @assignment.due_date %></td>
      <td><%= @assignment.assignment_details %></td>
    </tr>
  </table><br><br><br>
  <%= button_to "Delete Assignment", student_assignment_path(@student), method: :delete, data: { confirm: "#{@assignment.title} completed?" } %><br>
  <%= button_to "Edit Assignment", edit_student_assignment_path, :method => :get %>
</div>
